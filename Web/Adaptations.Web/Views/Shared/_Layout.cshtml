        <link href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|" rel="stylesheet" type="text/css">
        <link href="fonts/font-awesome.min.css" rel="stylesheet" type="text/css">

        <!-- Loading main css file -->
        <link rel="stylesheet" href="style.css">
    </environment>

</head>


<body>
    <div id="site-content">
        <header class="site-header">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" id="branding">
                    <img src="images/logo.png" alt="img" class="logo">
                    <div class="logo-copy">
                        <h1 class="site-title">Adaptations</h1>
                        <small class="site-description">Best movie-book adaptations</small>
                    </div>
                </a> <!-- #branding -->

                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item current-menu-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="menu-item"><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="menu-item">
                            <a id="menuButton" href="#">
                                <label id="header" class="ipc-responsive-button ipc-btn--theme-baseAlt ipc-responsive-button--transition-l ipc-btn--on-textPrimary ipc-responsive-button--single-padding sc-jIRcFI dKNnuG hamburger__icon" role="button" tabindex="0" aria-label="Open Navigation Drawer" aria-disabled="false" for="imdbHeader-navDrawer">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="ipc-icon ipc-icon--menu ipc-responsive-button__icon" id="iconContext-menu" viewBox="0 0 24 24" fill="currentColor" role="presentation">
                                        <path fill="none" d="M0 0h24v24H0V0z"></path>
                                        <path d="M4 18h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zm0-5h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zM3 7c0 .55.45 1 1 1h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1z"></path>
                                    </svg>
                                    <span class="ipc-responsive-button__text">Menu</span>
                                </label>
                            </a>
                        </li>
                        <li class="menu-item">@await this.Html.PartialAsync("_LoginPartial")</li>
                        <li class="menu-item"><a href="contact.html">Contact</a></li>
                    </ul> <!-- .menu -->

                    <div id="menuContent" style="display: none;">
                        <ul>
                            <li class="list-unstyled"><a asp-controller="Movies" asp-action="Index">Movies</a></li>
                            <li class="list-unstyled"><a asp-controller="Books" asp-action="Index">Books</a></li>
                            <!-- Add more menu items as needed -->
                        </ul>
                    </div>

                    <form class="search-form" asp-controller="Search" asp-action="GetResult" method="get">
                        <input type="text" placeholder="Search..." name="searchInput" id="searchInput">
                        <button type="submit" id="searchButton"><i class="fa fa-search"></i></button>
                    </form>
                </div> <!-- .main-navigation -->

                @*<div class="mobile-navigation"></div>*@
            </div>
        </header>

        <partial name="_CookieConsentPartial" />
        <main class="main-content">
            <div class="container">
                @this.RenderBody()
            </div> <!-- .container -->
        </main>
        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="widget">
                            <h3 class="widget-title">About me</h3>
                            <p>I'm a motivated, self-learner, that has a passion about web development, and this is my first MVC Web Project!</p>
                        </div>
                    </div>


                    <div class="col-lg-2">
                        <div class="widget">
                            <h3 class="widget-title">Help Center</h3>
                            <ul class="no-bullet">
                                <li><a href="#">If you need help, contact me on social media!</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="widget">
                            <h3 class="widget-title">Technological stack</h3>
                            <ul class="no-bullet">
                                <li>ASP.NET Core</li>
                                <li>EF Core</li>
                                <li>JS And CSS</li>
                                <li>Bootstrap 4</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="widget">
                            <h3 class="widget-title">Social Media</h3>
                            <ul class="no-bullet">
                                <li>FB : Dimitar Bojkov</li>
                                <li>LinkedIn : Dimitar Bozhkov</a></li>
                                <li><a href="#">Twitter: Hohenzi</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="widget">
                            <h3 class="widget-title">Contacts</h3>
                            <ul class="no-bullet">
                                <li><a href="#">dimitar_bozhkov@abv.bg</a></li>
                                <li><a href="#">DBozhkov@github.com</a></li>
                                <li><a href="#">Phone : 088888888</a></li>
                            </ul>
                        </div>
                    </div>
                </div> <!-- .row -->

                <div class="colophon">Adaptations Website 2023</div>
            </div> <!-- .container -->

        </footer>
    </div>
    <!-- Default snippet for navigation -->

    <environment names="Development">
        @*<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>*@
        <script src="~/js/DropdownMenu.js" asp-append-version="true"></script>
        <script src="~/js/jquery-1.11.1.min.js"></script>
        <script src="~/js/plugins.js"></script>
        <script src="~/js/app.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.2.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @this.RenderSection("Scripts", required: false)
</body>

</html>