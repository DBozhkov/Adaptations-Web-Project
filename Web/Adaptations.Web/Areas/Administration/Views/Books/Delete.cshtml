@using Adaptations.Data.Models.Enums
@model Adaptations.Web.ViewModels.Books.DeleteBookViewModel

@{
    this.ViewData["Title"] = "Delete Book";
}

<form method="post" id="deleteForm">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">

        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseYear">Book release year:</label>
        <input asp-for="ReleaseYear" class="form-control" />
        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Please enter a book description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre">Please enter a book genre:</label>
        <select asp-for="Genre" class="form-control" asp-items="@Html.GetEnumSelectList<BookGenre>()"></select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorName">Please enter a book author:</label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorBiography">Please enter author's bio:</label>
        <textarea asp-for="AuthorBiography" class="form-control"></textarea>
        <span asp-validation-for="AuthorBiography" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BooksSold">Number of books sold:</label>
        <input asp-for="BooksSold" class="form-control" />
        <span asp-validation-for="BooksSold" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-warning">Delete Book</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}